<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vcpb.androidphotos67albums.SearchResultsActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Results" />

        <GridLayout
            android:id="@+id/searchGridLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:layout_editor_absoluteX="10dp"
            android:layout_marginTop="8dp" >

        </GridLayout>

        <TextView
            android:id="@+id/searchPhotoNameMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the thumbnail for photo" />

        <ImageView
            android:id="@+id/searchPhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="285dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
